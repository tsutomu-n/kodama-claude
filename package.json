{
  "name": "@kodama/claude",
  "version": "0.4.1",
  "description": "Kodama for Claude Code â€” Smart restart, work tags, and one-key resume for Claude CLI sessions",
  "main": "dist/index.js",
  "bin": {
    "kc": "./bin/kc.ts"
  },
  "scripts": {
    "dev": "bun run bin/kc.ts",
    "build": "bun build ./bin/kc.ts --compile --minify --target=bun-linux-x64-baseline --outfile dist/kc-linux-x64",
    "build:arm": "bun build ./bin/kc.ts --compile --minify --target=bun-linux-arm64 --outfile dist/kc-linux-arm64",
    "build:all": "bun run build && bun run build:arm && bun run checksums",
    "checksums": "bash scripts/generate-checksums.sh",
    "test": "bun test",
    "test:integration": "bash scripts/integration-test.sh",
    "test:all": "bun test && bun run typecheck && bun run test:integration",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "claude-code",
    "claude",
    "kodama",
    "context",
    "memory",
    "persistence",
    "session",
    "cli",
    "extension",
    "unofficial"
  ],
  "author": "kodama-cli",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tsutomu-n/kodama-claude.git"
  },
  "bugs": {
    "url": "https://github.com/tsutomu-n/kodama-claude/issues"
  },
  "homepage": "https://github.com/tsutomu-n/kodama-claude#readme",
  "dependencies": {
    "commander": "^14.0.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "@types/node": "^24.2.1",
    "prettier": "^3.1.0",
    "typescript": "^5.9.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "kodama": {
    "i18n": {
      "defaultLanguage": "en",
      "supportedLanguages": ["en", "ja"],
      "documentation": {
        "en": "docs/en",
        "ja": "docs/ja"
      }
    }
  }
}